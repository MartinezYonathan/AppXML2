<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallepromoActivity">

    <TextView
        android:id="@+id/txtRegsitroUusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="128dp"
        android:fontFamily="cursive"
        android:text="Promociones"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTituloPromo"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="101dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTituloPromo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRegsitroUusa"
        app:srcCompat="@drawable/toper" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescripcionPromo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloPromo"
        app:srcCompat="@drawable/detallebk" />

    <TextView
        android:id="@+id/txtDescripcionPromo"
        android:layout_width="303dp"
        android:layout_height="95dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="17dp"
        android:text="Descripcion"
        app:layout_constraintBottom_toTopOf="@+id/btnContinuar"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtDescripcionPromo"
        app:layout_constraintStart_toStartOf="@+id/txtDescripcionPromo"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionPromo" />

    <TextView
        android:id="@+id/txtTituloPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="22dp"
        android:text="Titulo"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtRegsitroUusa" />

</androidx.constraintlayout.widget.ConstraintLayout>